# HoneyGrid environment variables

# -------------------------------------------------------------------
# Live notification tests (used by tests/test_notifications.py)
# -------------------------------------------------------------------
HONEYGRID_RUN_LIVE_NOTIFICATIONS=0
HONEYGRID_DISCORD_WEBHOOK=https://discord.com/api/webhooks/your_webhook_id/your_webhook_token

# -------------------------------------------------------------------
# Config overrides (server/config_loader.py)
# Format: HONEYGRID_SECTION_SUBSECTION_KEY=value
# Example: HONEYGRID_SERVER_PORT=9001
# -------------------------------------------------------------------
HONEYGRID_SERVER_HOST=0.0.0.0
HONEYGRID_SERVER_PORT=9000
HONEYGRID_SERVER_DATABASE_PATH=data/honeygrid.db
HONEYGRID_SERVER_DATABASE_PASSWORD=change_this_password

HONEYGRID_NOTIFICATIONS_ENABLED=false
HONEYGRID_NOTIFICATIONS_MIN_SEVERITY=low
HONEYGRID_NOTIFICATIONS_RATE_LIMIT_SECONDS=60
HONEYGRID_NOTIFICATIONS_BATCH_MODE=false
HONEYGRID_NOTIFICATIONS_BATCH_INTERVAL_SECONDS=3600

HONEYGRID_NOTIFICATIONS_EMAIL_ENABLED=false
HONEYGRID_NOTIFICATIONS_EMAIL_SMTP_HOST=smtp.example.com
HONEYGRID_NOTIFICATIONS_EMAIL_SMTP_PORT=587
HONEYGRID_NOTIFICATIONS_EMAIL_SMTP_USERNAME=your-username
HONEYGRID_NOTIFICATIONS_EMAIL_SMTP_PASSWORD=your-password
HONEYGRID_NOTIFICATIONS_EMAIL_FROM_ADDRESS=honeygrid@example.com
HONEYGRID_NOTIFICATIONS_EMAIL_TO_ADDRESSES=admin@example.com
HONEYGRID_NOTIFICATIONS_EMAIL_USE_TLS=true

HONEYGRID_NOTIFICATIONS_DISCORD_ENABLED=false
HONEYGRID_NOTIFICATIONS_DISCORD_WEBHOOK_URL=https://discord.com/api/webhooks/your_webhook_id/your_webhook_token
HONEYGRID_NOTIFICATIONS_DISCORD_USERNAME=HoneyGrid%20Bot
HONEYGRID_NOTIFICATIONS_DISCORD_AVATAR_URL=
